%div.row
  %div.span8
    %article.person
      %h1= @organization.name
      - if @organization.website.present?
        %a{href: @organization.website}
          %p.muted
            = @organization.website

      = raw @organization.description
    - if @organization.people.any?
      %h3 People
      = render @organization.people
  %div.span4
    = image_tag @organization.image.url
