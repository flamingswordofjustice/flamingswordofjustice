!!!

%html
  %head
    %link(href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300|Source+Sans+Pro:300' rel='stylesheet' type='text/css')
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = syndication_link_tag
    = google_analytics_tracker
    = csrf_meta_tags
    = favicon_link_tag
    = chartbeat_head_tracker
    %meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    %meta(name="bitly-verification" content="100f7700b68b")
    = yield :head

  %body{id: controller.controller_name, data: { spy: "scroll", target: "#side-navbar" }}
    = internet_defense_league
    %div#wrap
      = facebook_script
      = render 'shared/header'

      - if current_page?(root_path)
        = yield
      - else
        %section.container.main-content
          = yield

      %div#push

    %footer#footer.full-width
      %div.container
        %div.row-fluid
          %div.span2
            %a.brand{href: root_path}
              = image_tag 'sword_light.png'
          %div.span3
            %a{href: root_path}
              %h4 The Flaming Sword of Justice
            %p{style: "font-size: 12px; line-height: 16px"}= raw t(:description)
          - @nav_links.each do |link|
            %ul.span2.nav.nav-root
              - if link.parent_link?
                %li= link.title
                %ul.nav
                  - link.child_links.order("position").each do |child|
                    %li
                      %a{href: child.url}= child.title
              - else
                %li
                  %a{href: link.url}= link.title

        %div.row-fluid
          %div.span12
            %div.powered-by
              = render 'shared/powered_by'

  = chartbeat_tail_tracker
