= open_graph_and_meta_tags type: "article",
                           title: @episode.headline.blank? ? @episode.title : @episode.headline,
                           page_title: @episode.title,
                           description: @episode.social_description || @episode.description,
                           image: @episode.image.url,
                           url: @canonical_fb_url

- content_for :head do
  %meta{name: "episode-id", content: @episode.slug}
  %meta{name: "layout", content: "alt"}

%div#wrap
  %article.episode.container.full-width{id: @episode.slug, class: @episode.state, data: { uri: episode_path(@episode, format: :json), poll: 5.seconds, state: @episode.state }}
    = render partial: "episodes/modal"
    %div.row
      %div.offset1.span10
        %div.row-fluid.header
          %a.brand{href: root_path, title: "Logo", data: { track: true }}
            = image_tag "flamingswordmed.png"

          %ul.unstyled.inline.hidden-phone{style: "text-align: center; text-transform: uppercase; font-size: 14px; margin-top: 10px"}
            %li= link_to "About", "/organizations/the-flaming-sword-of-justice", style: "margin-left: 20px;"
            %li &middot;
            %li= link_to "Episodes", episodes_path

        %h4.muted
          Episode #{@episode.title.match(/(#\d+)/)[0]}
          / &middot;
          / Topic:
          / = comma_separated_list_of @episode.topics

        %h1= @episode.headline

        %div.row-fluid.episode-header
          %div.span8
            %p= raw @episode.social_description

          %div.span4.host
            %div.media
              %a.pull-left.media-object{href: person_path(@episode.host)}
                = image_tag @episode.host.image.thumb, width: 54, height: 54
              %div.media-body
                %a{href: person_path(@episode.host), style: "color: black"}
                  %h4.media-heading Host: #{@episode.host.name}
                %ul.social-icons.unstyled.hidden-phone
                  %li.facebook= facebook_follow @episode.host.facebook
                  %li.twitter.hidden-tablet= twitter_follow account: @episode.host.twitter

        %div{style: "margin-bottom: 20px;"}
          %a.btn.btn-facebook.btn-large{href: "http://facebook.com/sharer.php?u=#{@canonical_fb_url}", target: "_blank", data: {url: @canonical_fb_url}}
            %i.icon-facebook
            %span.hidden-phone Share on
            Facebook
          %a.btn.btn-twitter.btn-large.hidden-phone{href: "http://twitter.com/intent/tweet?" + twitter_share_attrs(text: @episode.default_twitter_text, url: @episode.canonical_short_link || @episode_url).to_param, target: "_blank"}
            %i.icon-twitter
            Tweet
          %a.btn.btn-primary.btn-large{href: itunes_link, title: "iTunes", data: { track: true }}
            %i.icon-music
            Subscribe
            %span.hidden-phone on iTunes

        = play_controls style: "full", episode: @episode, episode_url: @canonical_fb_url, player: @player, embed: params[:embed]

        %div.row-fluid{style: "margin-bottom: 20px"}
          %span.span4.offset2.vertical-gap-phone
            %a.btn.btn-facebook.btn-block{href: "http://facebook.com/sharer.php?u=#{@canonical_fb_url}", target: "_blank", data: {url: @canonical_fb_url}}
              Share on Facebook
          %span.span4
            %a.btn.btn-twitter.btn-block{href: "http://twitter.com/intent/tweet?" + twitter_share_attrs(text: @episode.default_twitter_text, url: @episode.canonical_short_link || @episode_url).to_param, target: "_blank"}
              Share on Twitter

        %div.episode-description
          = raw @episode.description

        %div.row-fluid
          %div.span8
            %h3 Featuring
            - @episode.guests.in_groups_of 2 do |group|
              %div.row-fluid
                - group.compact.each do |g|
                  %div.span6= render g
          %div.span4
            %h3 Powered by
            - org = Organization.where(name: "MoveOn.org").first
            = render org if org.present?

        - unless @episode.show_notes.blank?
          %h3 Show Notes
          %div.show-notes
            = raw @episode.show_notes

        %div.row-fluid.next-prev-episodes.hidden-phone
          %div.span6
            - if @episode.prev.present?
              %a{href: episode_path(@episode.prev, params.slice(:l)), title: "Previous Episode", data: { track: true }}
                %div.media
                  %i.icon-chevron-left.pull-left
                  %div.media-body
                    %small.muted Previous episode
                    %h3.nomargin= @episode.prev.title

          %div.span6{style: "text-align: right"}
            - if @episode.next.present?
              %a{href: episode_path(@episode.next, params.slice(:l)), title: "Next Episode", data: { track: true }}
                %div.media
                  %i.icon-chevron-right.pull-right
                  %div.media-body
                    %small.muted Next episode
                    %h3.nomargin= @episode.next.title

  %div.container.subscribe-after.full-width
    %div.row
      %div.span8.offset2
        %h3 Enjoy the show? Get every episode in your inbox.
        %p
          At the Flaming Sword of Justice, we think about email the
          way some people think about diamonds. We craft them. We
          hone them. And then we distribute them only to people that
          we love. Join us: sign up below.

        %form.subscribe.form-inline{action: subscribe_path, method: :post, data: { remote: true, track: true }}
          %div.row-fluid
            %div.span6.offset1.vertical-gap-phone
              %input.input-large.input-block-level(placeholder="Email Address" type="email" name="subscriber[email]" required)
            %div.span4
              %a.submit.btn.btn-primary.btn-large.btn-block{href: "#"}
                Sign Up

        %div.thanks{style: "display: none;"}
          %h3 Thanks! Like us on Facebook?
          = facebook_like


  %div#push

%footer#footer
  %div.container.full-width
    %div.row
      %div.offset1.span10
        %div.row-fluid
          %div.span2
            %a.brand{href: root_path}
              = image_tag 'sword_light.png'
          %div.span3
            %a{href: root_path}
              %h4 The Flaming Sword of Justice
            %p{style: "font-size: 12px; line-height: 16px"}
              = raw t(:description)
              = facebook_like
              = twitter_follow
          - @nav_links.each do |link|
            %ul.span2.nav.nav-root
              - if link.parent_link?
                %li= link.title
                %ul.nav
                  - link.child_links.order("position").each do |child|
                    %li
                      %a{href: child.url, data: { track: '"Type" : "Nav link"'}}= child.title
              - else
                %li
                  %a{href: link.url, data: { track: '"Type" : "Nav link"'}}= link.title

        %div.row-fluid.partners
          %div.span12
            %a.partner{href: "http://moveon.org", title: "Powered by MoveOn", data: { track: true }}
              %div= t(:powered_by)
              = image_tag "moveon.png", width: 180, style: "width: 180"
            %a.partner{href: "http://www.thoughtworks.com", title: "Supported by ThoughtWorks", data: { track: true }}
              %div with support from
              = image_tag "tw-logo-inverted.png", width: 120, style: "width: 120"
            / %a.partner{href: "https://mixpanel.com/f/partner"}
            /   %div tracking by
            /   %img{src: "//cdn.mxpnl.com/site_media/images/partner/badge_blue.png", alt: "Mobile Analytics", style: "text-align: center"}

