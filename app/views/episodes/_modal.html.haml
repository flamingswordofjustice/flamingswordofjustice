%div#share-modal.modal.hide.fade{tabindex: -1, role: "dialog", "aria-labelledby" => "share-modal-label", "aria-hidden" => true}
  %div.modal-header
    %button.close{type: "button", "aria-hidden" => true, "data-dismiss" => "modal"} x
    %h3#share-modal-label Share now!

  %div.modal-body
    %p Do you like puppies?

    %a.btn.btn-success YES
    %a.btn.btn-danger{"data-dismiss" => "modal"}  NO
