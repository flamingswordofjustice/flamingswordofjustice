= open_graph_and_meta_tags title: @post.title,
                           type: "article",
                           description: @post.content

%article.post.container.full-width{id: @post.slug}
  %div.row
    %div.offset1.span10
      %div.row-fluid.header
        %a.brand{href: root_path, title: "Logo", data: { track: true }}
          = image_tag "flamingswordmed.png"

        %ul.unstyled.inline.hidden-phone{style: "text-align: center; text-transform: uppercase; font-size: 14px; margin-top: 10px"}
          %li= link_to "About", "/organizations/the-flaming-sword-of-justice", style: "margin-left: 20px;"
          %li &middot;
          %li= link_to "Episodes", episodes_path

      %h4.muted= comma_separated_list_of @post.topics

      %h1= @post.title

      %div{style: "margin-bottom: 20px;"}
        %a.btn.btn-facebook.btn-large{href: "http://facebook.com/sharer.php?u=#{@canonical_fb_url}", target: "_blank", data: {url: @canonical_fb_url}}
          %i.icon-facebook
          %span.hidden-phone Share on
          Facebook
        %a.btn.btn-twitter.btn-large.hidden-phone{href: "http://twitter.com/intent/tweet?" + twitter_share_attrs(url: @post.canonical_short_link).to_param, target: "_blank"}
          %i.icon-twitter
          Tweet
        %a.btn.btn-primary.btn-large{href: itunes_link, title: "iTunes", data: { track: true }}
          %i.icon-music
          Subscribe
          %span.hidden-phone on iTunes

      - if @post.embedded_content.present?
        %div.embed-container
          %iframe{allowfullscreen: true, frameborder: 0, src: @post.embedded_content.gsub(/http(s?):/, '')}

        %div.row-fluid{style: "margin-bottom: 20px"}
          %span.span4.offset2.vertical-gap-phone
            %a.btn.btn-facebook.btn-block{href: "http://facebook.com/sharer.php?u=#{@canonical_fb_url}", target: "_blank", data: {url: @canonical_fb_url}}
              Share on Facebook
          %span.span4
            %a.btn.btn-twitter.btn-block{href: "http://twitter.com/intent/tweet?" + twitter_share_attrs(url: @post.canonical_short_link).to_param, target: "_blank"}
              Share on Twitter

      %div.post-content{style: "margin-bottom: 20px"}
        %span.muted= @post.created_at.to_date.to_s(:long)
        |
        = raw @post.content

= render partial: "shared/subscribe_after"
