%article.post
  %header
    %a{href: post_path(post)}
      %h1= post.title
    %div.muted.attribution
      = link_to post.author_name, "#"
      |
      %time(pubdate="pubdate")= post.created_at.to_s(:long)

  %section.body
    %p= raw post.content + link_to("more", post_path(post.slug), class: "action")
