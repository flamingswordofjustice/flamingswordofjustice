%article.post
  %header
    %h1
      = link_to post.title, post_path(post)
    %p.muted
      = link_to post.author_name, "#"
      |
      %time(pubdate="pubdate")= post.created_at.to_s(:long)

  %p= raw post.content

  %div.actions
    %a.read{href: episode_path(@latest.slug)}
      read
      %i.icon-angle-right
