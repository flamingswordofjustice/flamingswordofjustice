%section.current-episode
  %section.container
    %div.row
      %div.span4
        %a{href: root_path}
          = image_tag "logo.png", width: "100%", class: "big-brand"
        %a{href: "http://moveon.org", style: "text-align: center; display: block"}
          %span(style="font-size: 10px;")= t(:powered_by)
          = image_tag "moveon.png", width: "120"

      %div.span8.episode-blurb
        = render @latest unless @latest.nil?

%section.share-everything
  %section.container
    %div.row
      %div.subscribe.span4
        %section
          %a.itunes{href: itunes_link}
            %i.icon-music
            %span
              Listen
              %em for great justice.
      %div.sign-up.span4
        %section
          %form(action="/signup" method="get")
            %input(placeholder="Email" type="email" name="email")
            %br
            %a.submit{href: "#"}
              %i.icon-envelope
              Get the newsletter
      %div.share.span4
        %section
          %div.facebook
            %i.icon-facebook
            %div
              %div Follow us on Facebook
              = facebook_follow

          %div.twitter
            %i.icon-twitter
            %div
              = twitter_follow
              %div Follow us on Twitter

%section.past-episodes
  %section.container
    %div.row
      %div.span9
        %h2 More Justice
        = render @content
      %div.span3
        %h2 More Guests
        = render @guests
        %a{href: people_path}
          Meet more of our guests
          %i.icon.icon-angle-right

