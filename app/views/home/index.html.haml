%div.row
  %div.span12.todays-show
    %div.row
      %div.span4
        = link_to root_path do
          = image_tag "sword.png", width: "100%", class: "big-brand"
        = link_to "http://moveon.org", style: "text-align: center; display: block" do
          %span(style="font-size: 10px;") powered by
          = image_tag "moveon.png", width: "120"



      %div.span8.show-blurb
        %ul.nav.nav-header
          = render 'shared/nav_links'

        %h4.muted TODAY
        - show = @shows.first
        %div
          %h3= show.title
          %p
            = raw show.blurb
            = link_to show_path(show.slug) do
              More
              %i.icon-angle-right
        %div.play-now.row
          %span.span4
            %a(href="#")
              %i.icon-play-circle
              %h1 PLAY NOW
          %span.span4
            %form(action="/signup" method="get" style="margin-top: 20px;")
              %input(placeholder="Email" type="Email")
              %br
              %input(type="button" class="btn" value="Sign Up")

%div.row.past-shows
  %div.span12
    %h1 PAST SHOWS
