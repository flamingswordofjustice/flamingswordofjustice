%ul.nav
  - @nav_links.each do |link|
    - if link.parent_link?
      %li.dropdown
        %a.dropdown-toggle{href: link.url, data: { toggle: "dropdown" }}
          = link.title
          %i.icon-angle-down
        %ul.dropdown-menu
          - link.child_links.order("position").each do |child|
            %li
              %a{href: child.url}= child.title
    - else
      %li
        %a{href: link.url}= link.title
