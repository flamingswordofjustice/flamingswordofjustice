%article.media-badge.person
  %a.avatar{href: person_path(person), title: "Badge", data: { track: "'Type' : 'Person'" }}
    - if person.image.present?
      = image_tag person.image.thumb
    - else
      %i.icon-user
  %section.body
    %a{href: person_path(person), title: "Badge", data: { track: "'Type' : 'Person'" }}
      %h4= person.name
    %small.description
      - if person.title.present?
        = person.title
      - else
        = raw truncate_html(person.description)
  %section.social
    = social_icons_for person
