- container_class = orientation == :horizontal ? "span4" : ""

%div.subscribe{class: container_class}
  %section
    %a.itunes{href: itunes_link}
      %i.icon-music
      %span
        Podcast!
        %em Subscribe &amp; enjoy

%div.sign-up{class: container_class}
  %section
    %form.subscribe{action: subscribe_path, method: :post, data: { remote: true }}
      %input(placeholder="you@example.com" type="email" name="subscriber[email]" required)
      %br
      %a.submit{href: "#", data: { message: "Check your inbox!" } }
        %i.icon-envelope
        Join our newsletter

%div.share{class: container_class}
  %section
    %div.facebook
      %i.icon-facebook
      %div.follow
        = facebook_like request.original_url

    %div.twitter
      %i.icon-twitter
      %div.follow
        - if defined?(share)
          - text = share.twitter_text if share.respond_to?(:twitter_text) && share.twitter_text.present?
          = twitter_share text: text
        - else
          = twitter_follow count: true
