%div.row
  %div.span8
    %article.person
      %h1= @person.name
      - unless @person.title.blank?
        %p.muted= @person.title
      = raw @person.description

    - if @person.organization.present?
      %section.organization.clearfix
        %h3 Organization
        = render @person.organization

    - if @person.appearances.any?
      %section.appearances.clearfix
        %a{name: "appearances"}
        %h3 Episodes
        = render @person.episodes

  %div.span4
    = image_tag @person.image.url unless @person.image.blank?
