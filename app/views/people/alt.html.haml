= open_graph_and_meta_tags type: "person",
                           title: @person.name + ", " + @person.title,
                           description: @person.description

%article.person.container.full-width{id: @person.slug}
  %div.row
    %div.offset1.span10
      %div.row-fluid.header
        %a.brand{href: root_path, title: "Logo", data: { track: true }}
          = image_tag "flamingswordmed.png"

        %ul.unstyled.inline.hidden-phone{style: "text-align: center; text-transform: uppercase; font-size: 14px; margin-top: 10px"}
          %li= link_to "About", "/organizations/the-flaming-sword-of-justice", style: "margin-left: 20px;"
          %li &middot;
          %li= link_to "Episodes", episodes_path

      %h4.muted= @person.title

      %h1= @person.name

      %div.bio
        %figure.thumbnail.pull-left
          = image_tag @person.image.url
        = raw @person.description

      - unless @person.organization.blank?
        %div.row-fluid.clearfix
          %div.span6
            %h3 Organization
            = render @person.organization

      - if @person.appearances.any?
        %div.episodes.clearfix
          %h3 Episodes
          = # render @person.episodes
          - @person.episodes.in_groups_of(2).each do |group|
            %div.row-fluid{style: "margin-bottom: 20px"}
              - group.compact.each do |episode|
                %div.span6
                  %a{href: episode_path(episode), style: "display: block"}
                    %div{style: "background-image: url(#{image_path(episode.image.playable.present? ? episode.image.playble : episode.image)}); border-top-left-radius: 4px; border-top-right-radius: 4px; background-size: cover; background-position: center center; min-height: 200px"}
                    %div{style: "background-color: #eee; border-bottom-left-radius: 4px; border-bottom-right-radius: 4px; padding: 10px;"}
                      %h4{style: "color: #b0242f"}= episode.title
                      %div{style: "font-size: 12px; line-height: 18px; color: #666; height: 36px; overflow: hidden;"}= episode.headline


= render partial: "shared/subscribe_after"
